<h1>Register</h1>
<form action="/mentee/register" method="post">

    <input type="text" name="name" placeholder="name">
    <input type="text" name="email" placeholder="email">
    <input type="text" name="phone" placeholder="phone">
    <input type="text" name="password" placeholder="password">

    <button class="sendotp-button">Send otp</button>

    <input type="text" name="text" placeholder="otp">


</form>

<script>
    document.getElementsByClassName("sendotp-button").addEventListener("click", function (e) {
        e.preventDefault()
    });
    async function sendOTP() {

        try {
            const rawResponse = await fetch('/mentee/login', {
                method: 'POST',
                headers: {
                    // 'Accept': 'application/json',
                    'Content-Type': 'application/json'
                },
                body: JSON.stringify({
                    name: document.getElementsByName('name')[0],
                    email: document.getElementsByName('email')[0],
                    phone: document.getElementsByName('phone')[0],
                    password: document.getElementsByName('password')[0]
                })
            });
            const content = await rawResponse.json();

            console.log(content)
        } catch (error) {
            console.error(error)
        }
    }
</script>